{
  "manifest_version": 3,
  "name": "Weda Helper",
  "version": "2.2.9.8",
  "options_page": "options.html",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost/"],
  "action": {
    "default_popup": "popup.html"
  },
  "description": "Simplifie et fluidifie l'usage de Weda",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://secure.weda.fr/*"], 
      "js": [
          "content.js",
          "Consultation.js",
          "fse.js",
          "searchUpload.js",
          "companionlink.js",
          "prescription.js",
          "update.js",
          "aati.js",
          "metrics.js"]
    },
    { 
      "matches": ["*://secure.weda.fr/*"], "all_frames":true, //On insère ces deux scripts dans toutes les iframe pour pouvoir récupérer les raccourcis partout
      "js": [
          "keyCommands.js",
          "hotkeys.js"]

    }
  ]
}


